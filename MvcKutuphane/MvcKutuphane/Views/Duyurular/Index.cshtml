@using MvcKutuphane.Models.Entity;
@model List<TBLDUYURULAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
    string renk = "";
}

@*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">*@
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<h2>Duyurular</h2>
<table class="table table-bordered">
    <tr>
        <th>Duyuru No</th>
        <th>Kategori</th>
        <th>Tarih</th>
        <th>Sil</th>
        @*<th>Güncelle</th>*@
        <th>İçerik</th>

    </tr>
    @foreach (var dyr in Model)
    {
        if (dyr.KATEGORİ == "Diğer")
        {
            renk = "bg-info text-white";
        }
        if(dyr.KATEGORİ == "Yeni Kitaplar")
        {
            renk = "bg-warning text-white";
        }
        if (dyr.KATEGORİ == "İletişim")
        {
            renk = "bg-success text-white";
        }
        if (dyr.KATEGORİ == "Kitap Gecikmeleri")
        {
            renk = "bg-danger text-white";
        }
        <tr class=@renk>
            <td>@dyr.ID</td>
            <td> @dyr.KATEGORİ</td>
            <td>@Convert.ToDateTime(dyr.TARİH).ToString("dd/MM/yyyy")</td>
            <td><a href="/Duyurular/DuyuruSil/@dyr.ID" class="btn btn-danger">Sil</a></td>
            @*<td><a href="/Duyurular/DuyuruGetir/@dyr.ID" class="btn btn-success">Güncelle</a></td>*@
            <td><a href="/Duyurular/DuyuruDetay/@dyr.ID" class="btn btn-default" style="background-color:skyblue; color:#fff">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Duyurular/DuyuruEkle/" class="btn btn-primary">Yeni Duyuru Ekle </a>

