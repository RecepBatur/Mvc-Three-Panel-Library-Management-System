@using MvcKutuphane.Models.Entity;
@model List<TBLDUYURULAR>
@{
    ViewBag.Title = "Duyurular";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}

<h2>Duyurular</h2>


<table class="table table-bordered">
    <tr>
        <th>Kategori</th>
        <th>Tarih</th> 
        <th>İçerik</th>
    </tr>
    @foreach (var dyr in Model)
    {

<tr>
    <td>@dyr.KATEGORİ</td>
    <td>@Convert.ToDateTime(dyr.TARİH).ToString("dd/MM/yyyy")</td>
    <td>@dyr.İCERİK</td>
</tr>
    }
</table>