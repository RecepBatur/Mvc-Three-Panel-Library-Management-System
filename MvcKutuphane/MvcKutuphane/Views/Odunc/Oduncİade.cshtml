@model MvcKutuphane.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "Oduncİade";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("OduncGuncelle", "Odunc", FormMethod.Post)) //Bu form Hangi ActionResult'ı Kapsıyor? PersonelGuncelle. Hangi Controller içinde? Personel. Bu form hangi methodta çalışacak? FormMethod.Post
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <label>Hareket ID</label>
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        <label>Kitap Adı</label>
        @Html.TextBoxFor(k => k.TBLKİTAP.AD, new { @class = "form-control" })
        <br />
        <label>Üye</label>
        @Html.TextBoxFor(k => k.TBLUYELER.AD, new { @class = "form-control" })
        <br />
        <label>Personel</label>
        @Html.TextBoxFor(k => k.TBLPERSONEL.PERSONEL, new { @class = "form-control" })
        <br />
        <label>Alış Tarihi</label>
        @Html.TextBoxFor(k => k.ALİSTARİH, "{0: dd.MM.yyyy}", new { @class = "form-control" })
        <br />
        <label>Belirlenen İade Tarihi</label>
        @Html.TextBoxFor(k => k.İADETARİH, "{0: dd.MM.yyyy}", new { @class = "form-control" })
        <br />
        <label>Teslim Edilme Tarihi</label>
        <input type="text" class="form-control" name="UYEGETİRTARİH" value="@DateTime.Now.ToShortDateString()" />
        <br />
        <label>Geç Gelen Gün Sayısı</label>
        <input type="text" class="form-control" id="Gecİnput" value="@ViewBag.dgr" />
    </div>
    <div>

        <button class="btn btn-info">Ödünç Kitabı Geri Al</button>
    </div>
}
