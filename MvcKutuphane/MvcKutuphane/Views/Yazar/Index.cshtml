@using MvcKutuphane.Models.Entity
@model List<TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h2>Yazarlar</h2>
<table class="table table-striped">
    <tr style="background-color:rgb(252,178,22)">
        <th>YAZAR ID</th>
        <th>YAZAR ADI</th>
        <th>YAZAR SOYADI</th>
        @*<th>YAZAR DETAY</th>*@
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>YAZARIN KİTAPLARI</th>
    </tr>
    @foreach (var yazar in Model)
    {
<tr>
    <td>@yazar.ID</td>
    <td>@yazar.AD</td>
    <td>@yazar.SOYAD</td>
    @*<td>@yazar.DETAY</td>*@
    <td>@Html.ActionLink("Sil", "YazarSil", new { id = yazar.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstediğinizden Emin Misiniz?')" })</td>
    <td><a href="/Yazar/YazarGetir/@yazar.ID" class="btn btn-warning">Güncelle</a></td>
    <td><a href="/Yazar/YazarKitaplar/@yazar.ID" class="btn btn-default" style="background-color:lightseagreen; color:white;">Yazarın Kitapları</a></td>
</tr>
    }


</table>
<a href="/Yazar/YazarEkle/" class="btn btn-primary">Yeni Yazar Ekle</a>