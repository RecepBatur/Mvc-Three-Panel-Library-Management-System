@using MvcKutuphane.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLUYELER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Üyeler</h2>

<table class="table table-bordered">
    <tr>
        <th>ÜYE ID</th>
        <th>ÜYE ADI</th>
        <th>ÜYE SOYADI</th>
        <th>MAİL</th>
        <th>KULLANICI ADI</th>
        <th>ŞİFRESİ</th>
        <th>TELEFON</th>
        <th>OKUL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>Kitap Geçmişi</th>

    </tr>
    @foreach (var uye in Model)
    {

        <tr>
            <td>@uye.ID</td>
            <td>@uye.AD</td>
            <td>@uye.SOYAD</td>
            <td>@uye.MAİL</td>
            <td>@uye.KULLANICIADI</td>
            <td>@uye.SİFRE</td>
            <td>@uye.TELEFON</td>
            <td>@uye.OKUL</td>
            <td><a href="/Uyeler/UyeSil/@uye.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Uyeler/UyeGetir/@uye.ID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Uyeler/UyeKitapGecmis/@uye.ID" class="btn btn-info">Kitap Geçmişi</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa })) @*modelden gelecek değerleri sayfa içerisinde listele. Ve bu sayfa adlı değişkenin değeri her defasında bir url action alacak yani sayfa numaraları.
                                                                                         Ve bu sayfa numaralarını al indexe gönder. o url action'da kaçıncı sayfa değeri ise o sayfayı bana göster.*@
<a href="/Uyeler/UyeEkle/" class="btn btn-primary">Yeni Üye Ekle </a>

