@using MvcKutuphane.Models.Entity
@model List<TBLKİTAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Sayfası</h2>

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
<div style="margin-bottom:15px; margin-top:15px;">
    <b>Aranacak Kitap Adını Giriniz:</b>@*@Html.TextBox("c")*@
    @Html.TextBox("c", null, new { @class = "form-control" })
    @*<input type="text" class="form-control" placeholder="Aramayı Buradan Yapabilirsiniz..." />*@
    
    <input type="submit" value="Ara" class="btn btn-default" style="margin-top:4px; width:100px;" />
</div>
}
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kategorisi</th>
        <th>Kitap Yazarı</th>
        <th>Basım Yılı</th>
        <th>Yayınevi</th>
        <th>Sayfa Sayısı</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach(var k  in Model)
            {
<tr>
    <td>@k.ID</td>
    <td>@k.AD</td>
    <td>@k.TBL_KATEGORİ.AD</td>
    <td>@k.TBLYAZAR.AD @k.TBLYAZAR.SOYAD</td>
    <td>@k.BASIMYIL</td>
    <td>@k.YAYINEVİ</td>
    <td>@k.SAYFA</td>
    <td>@k.DURUM</td>
    <td><a href="/Kitap/KitapSil/@k.ID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Kitap/KitapGetir/@k.ID" class="btn btn-success">Güncelle</a></td>
</tr>
            }
</table>
<a href="/Kitap/KitapEkle/" class="btn btn-primary">Yeni Kitap Ekle</a>
