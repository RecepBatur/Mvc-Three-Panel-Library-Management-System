@model MvcKutuphane.Models.Entity.TBLKİTAP
@{
    ViewBag.Title = "KitapEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Kitap Adı</label>
        @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap Kategori</label>
        @Html.DropDownListFor(k => k.TBL_KATEGORİ.ID, (List<SelectListItem>)ViewBag.ktp1, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Yazarı</label>
        @Html.DropDownListFor(k => k.TBLYAZAR.ID, (List<SelectListItem>)ViewBag.yzr1, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Basım Yılı</label>
        @Html.TextBoxFor(k => k.BASIMYIL, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Yayınevi</label>
        @Html.TextBoxFor(k => k.YAYINEVİ, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Sayfa Sayısı</label>
        @Html.TextBoxFor(k => k.SAYFA, new { @class = "form-control" })
    </div>
    <div>
        <button style="margin-top:15px" class="btn btn-info">Kitap Ekle</button>
        <a style="margin-top:15px" href="/Kitap/Index/" class="btn btn-info">Geri Dön</a>
    </div>
    <input type="hidden" name="Durum" value="True" /> <!--Kitabın durumunu true olarak atadık ekleyince. Gizli bir şekilde.-->

</form>

